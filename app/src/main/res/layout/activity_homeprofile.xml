<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/cover"
        style="@style/Cover"
        android:src="@drawable/profileimage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <com.vansuita.materialabout.views.CircleImageView
            android:layout_width="100dp"
            android:layout_height="@dimen/profile_picture_size"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/name"
            style="@style/Name"
            android:paddingTop="10dp"
            android:text="Shrreya Behll" />

        <TextView
            android:id="@+id/phone_no"
            style="@style/SubTitle"
            android:text="+91 98XXXXXXXX"/>

        <TextView
            android:id="@+id/email"
            style="@style/SubTitle"
            android:text="shrreya.behll@gmail.com"/>



        <com.vansuita.materialabout.views.AutoFitGridLayout
            android:id="@+id/links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">


        </com.vansuita.materialabout.views.AutoFitGridLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/app_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/social_media_driver"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:backgroundTint="@color/bg_screen2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                        android:id="@+id/startup_no1"
                        style="@style/Name"
                        android:layout_width="wrap_content"
                        android:text="@string/startup_name"
                            android:layout_alignParentLeft="true"
                        />

                        <TextView
                            android:id="@+id/viewMore1"
                            style="@style/ViewMore"
                            android:layout_width="wrap_content"
                            android:text="View More"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/startup_id1"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="@string/startup_id" />

                    <TextView
                        android:id="@+id/aadhar_verified1"
                        android:paddingBottom="5dp"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="Aadhar Verfied" />


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startup_no_2"
                            style="@style/Name"
                            android:layout_width="wrap_content"
                            android:text="@string/startup_name"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/viewMore2"
                            style="@style/ViewMore"
                            android:layout_width="wrap_content"
                            android:text="View More"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/startup_id3"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="@string/startup_id" />

                    <TextView
                        android:id="@+id/aadhar_verified3"
                        android:paddingBottom="5dp"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="Aadhar Verfied" />


                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startup_no"
                            style="@style/Name"
                            android:layout_width="wrap_content"
                            android:text="@string/startup_name"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/viewMore"
                            style="@style/ViewMore"
                            android:layout_width="wrap_content"
                            android:text="View More"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/startup_id"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="@string/startup_id" />

                    <TextView
                        android:id="@+id/aadhar_verified"
                        android:paddingBottom="5dp"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="Aadhar Verfied" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startup_no4"
                            style="@style/Name"
                            android:layout_width="wrap_content"
                            android:text="@string/startup_name"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/viewMore4"
                            style="@style/ViewMore"
                            android:layout_width="wrap_content"
                            android:text="View More"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/startup_id4"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="@string/startup_id" />

                    <TextView
                        android:id="@+id/aadhar_verified4"
                        android:paddingBottom="5dp"
                        style="@style/TextLabel"
                        android:gravity="left"
                        android:text="Aadhar Verfied" />


                </LinearLayout>
            </RelativeLayout>

            <com.vansuita.materialabout.views.AutoFitGridLayout
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

            </com.vansuita.materialabout.views.AutoFitGridLayout>
        </LinearLayout>

</ScrollView>

    </LinearLayout>

</FrameLayout>


</android.support.v7.widget.CardView>